<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/llRoot"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:orientation="vertical">

    <include layout="@layout/view_head" />

    <com.spark.szhb_master.ui.intercept.MyScrollView
        android:id="@+id/scrollView"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fillViewport="true"
        android:overScrollMode="never">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">


            <LinearLayout
                android:layout_width="match_parent"
                android:orientation="vertical"
                android:layout_height="wrap_content">

                <LinearLayout
                    android:paddingLeft="10dp"
                    android:layout_width="match_parent"
                    android:layout_height="40dp"
                    android:gravity="center_vertical"
                    android:orientation="horizontal">

                    <RadioGroup
                        android:id="@+id/mRadioGroup"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:gravity="center_vertical"
                        android:orientation="horizontal">

                            <RadioButton
                                android:id="@+id/rbBuy"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:button="@null"
                                android:checked="true"
                                android:drawableBottom="@drawable/martket_tab_green_selector"
                                android:drawablePadding="5dp"
                                android:text="@string/text_buy_in"
                                android:textColor="@color/main_font_green"
                                android:textSize="@dimen/font_small" />



                        <RadioButton
                            android:id="@+id/rbSell"
                            android:layout_width="0dp"
                            android:layout_weight="1"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="18dp"
                            android:button="@null"
                            android:gravity="center"
                            android:drawableBottom="@drawable/tab_market_red"
                            android:drawablePadding="5dp"
                            android:text="@string/text_sale_out"
                            android:textColor="@color/main_font_red"
                            android:textSize="@dimen/font_small" />
                    </RadioGroup>

                    <org.angmarch.views.NiceSpinner
                        android:id="@+id/limitSpinner"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentEnd="true"
                        android:layout_centerVertical="true"
                        android:textColor="@color/sec_font_grey"
                        android:textSize="@dimen/font_small"
                        app:textTint="@color/sec_font_grey" />
                </LinearLayout>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="#f5f7ff" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:paddingBottom="10dp">
                    <LinearLayout
                        android:layout_marginTop="5dp"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:orientation="vertical"
                        android:paddingLeft="10dp"
                        android:paddingRight="5dp">



                        <FrameLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent">

                            <include layout="@layout/view_market_buy" />

                            <include layout="@layout/view_market_sell" />
                        </FrameLayout>
                    </LinearLayout>


                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="5dp"
                        android:layout_marginRight="8dp"
                        android:layout_weight="1"
                        android:orientation="vertical">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="40dp"
                            android:gravity="center_vertical">

                            <TextView
                                android:layout_width="28dp"
                                android:layout_height="wrap_content"
                                android:text="@string/text_dish"
                                android:textColor="@color/third_font_grey"
                                android:textSize="@dimen/font_mini" />

                            <TextView
                                android:id="@+id/tvPriceTag"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_weight="0.4"
                                android:ellipsize="end"
                                android:gravity="center"
                                android:lines="1"
                                android:text="@string/text_price"
                                android:textColor="@color/third_font_grey"
                                android:textSize="@dimen/font_mini" />

                            <TextView
                                android:id="@+id/tvCountTag"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_weight="0.6"
                                android:ellipsize="end"
                                android:gravity="center"
                                android:lines="1"
                                android:text="@string/text_number"
                                android:textColor="@color/third_font_grey"
                                android:textSize="@dimen/font_mini" />
                        </LinearLayout>

                        <android.support.v7.widget.RecyclerView
                            android:id="@+id/recyclerSell"
                            android:layout_width="match_parent"
                            android:layout_height="112dp" />

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:gravity="center_vertical"
                            android:orientation="vertical">

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:gravity="center_vertical"
                                android:orientation="horizontal">

                                <TextView
                                    android:id="@+id/tvLatest"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="@string/latest_price"
                                    android:textColor="@color/main_font_green"
                                    android:textSize="@dimen/font_small" />

                                <TextView
                                    android:id="@+id/tvPrice"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="--"
                                    android:textColor="@color/main_font_green"
                                    android:textSize="@dimen/font_normal"
                                    android:textStyle="bold" />
                            </LinearLayout>

                            <TextView
                                android:id="@+id/tvMoney"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:ellipsize="end"
                                android:maxLines="1"
                                android:text="--"
                                android:textColor="@color/sec_font_grey"
                                android:textSize="@dimen/font_mini" />
                        </LinearLayout>

                        <android.support.v7.widget.RecyclerView
                            android:id="@+id/recyclerBuy"
                            android:layout_width="match_parent"
                            android:layout_height="112dp" />
                    </LinearLayout>
                </LinearLayout>
            </LinearLayout>
            <View
                android:layout_width="match_parent"
                android:layout_height="10dp"
                android:background="@color/main_bg" />

            <LinearLayout
                android:id="@+id/llAll"
                android:layout_width="match_parent"
                android:layout_height="42dp"
                android:paddingLeft="10dp">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:gravity="center_vertical"
                    android:text="@string/current_trust"
                    android:textColor="@color/main_font_black"
                    android:textSize="@dimen/font_xlager"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/tvAll"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_alignParentEnd="true"
                    android:layout_centerVertical="true"
                    android:background="@drawable/ripple_white"
                    android:gravity="center_vertical"
                    android:padding="10dp"
                    android:text="@string/all"
                    android:textSize="@dimen/font_small" />
            </LinearLayout>

            <View style="@style/line_bg_grey" />

            <FrameLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <android.support.v7.widget.RecyclerView
                    android:id="@+id/recyclerCurrentEntrust"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:visibility="visible" />

                <TextView
                    android:id="@+id/tvLogin"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@color/white"
                    android:gravity="center"
                    android:padding="30dp"
                    android:text="@string/text_click_login"
                    android:textColor="@color/sec_font_grey"
                    android:textSize="@dimen/font_normal"
                    android:visibility="invisible" />

                <TextView
                    android:id="@+id/tvEmpty"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@color/white"
                    android:gravity="center"
                    android:padding="30dp"
                    android:text="@string/order_entity"
                    android:drawableTop="@mipmap/no_order"
                    android:textColor="@color/sec_font_grey"
                    android:textSize="@dimen/font_normal"
                    android:visibility="invisible" />
            </FrameLayout>
        </LinearLayout>
    </com.spark.szhb_master.ui.intercept.MyScrollView>

</LinearLayout>
