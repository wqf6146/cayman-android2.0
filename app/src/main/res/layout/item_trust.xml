<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:paddingBottom="14dp"
        android:paddingLeft="14dp"
        android:paddingRight="4dp"
        android:paddingTop="4dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:layout_weight="0.3"
                android:id="@+id/trust_type"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/main_font_green"
                android:textSize="@dimen/font_small" />

            <TextView
                android:visibility="gone"
                android:layout_weight="0.7"
                android:id="@+id/tv_symbol"
                android:textSize="@dimen/font_small"
                android:textColor="#17304d"
                android:text="GCX/USDT"
                android:layout_width="0dp"
                android:layout_height="wrap_content" />

            <TextView
                android:text="1111"
                android:id="@+id/trust_time"
                android:gravity="left"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:textColor="@color/main_font_grey"
                android:textSize="@dimen/sp_10" />

            <TextView

                android:id="@+id/trust_back"
                android:layout_width="60dp"
                android:layout_height="wrap_content"
                android:background="@drawable/ripple_white"
                android:gravity="end"
                android:paddingBottom="10dp"
                android:paddingRight="10dp"
                android:paddingTop="10dp"
                android:text="@string/text_repeal"
                android:textColor="@color/btn_normal"
                android:textSize="@dimen/font_small" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginRight="14dp">

            <TextView
                android:id="@+id/trust_ones"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="start"
                android:text="价格(USDT)"
                android:textColor="@color/sec_font_grey"
                android:textSize="@dimen/font_mini" />

            <TextView
                android:id="@+id/trust_one"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center"
                android:text="数量(BTC)"
                android:textColor="@color/sec_font_grey"
                android:textSize="@dimen/font_mini" />

            <TextView
                android:id="@+id/trust_two"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="end"
                android:text="实际成交(BTC)"
                android:textColor="@color/sec_font_grey"
                android:textSize="@dimen/font_mini" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginRight="14dp"
            android:layout_marginTop="5dp">

            <TextView
                android:id="@+id/trust_price"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="start"
                android:textColor="@color/main_font_black"
                android:textSize="@dimen/font_small" />

            <TextView
                android:id="@+id/trust_num"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center"
                android:textColor="@color/main_font_black"
                android:textSize="@dimen/font_small" />

            <TextView
                android:id="@+id/trust_done"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="end"
                android:textColor="@color/main_font_black"
                android:textSize="@dimen/font_small" />
        </LinearLayout>
    </LinearLayout>

    <View style="@style/line_bg_grey" />
</LinearLayout>